                    case 'marketing':
                        para = generateMarketingText();
                        break;
                    case 'business':
                        para = generateBusinessText(i);
                        break;
                }
                
                text += (i > 0 ? '\n\n' : '') + para;
                currentWordCount += para.split(/\s+/).length;
